<Page x:Class="WPF_Quiz_Anwendung.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Quiz_Anwendung"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage"
      Background="#F3C8FF">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="325"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="325"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titel -->
        <TextBlock x:Name="Überschrift" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5"
                   Text="Einstellungen"
                   FontFamily="/WPF_Quiz_Anwendung;component/Fonts/#Grandstander"
                   FontSize="36"
                   FontWeight="Bold"
                   Margin="20,0,0,0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Foreground="Black"/>

        <!-- Accessibility Box -->
        <Border x:Name="Border1" Grid.Row="1" Grid.Column="1"
                Background="#E9C0F0"
                CornerRadius="4"
                Padding="8"
                Margin="0,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="42"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="42"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="Accessibility" Grid.Row="0" Grid.Column="0"
                           Text="Accessibility"
                           FontFamily="/WPF_Quiz_Anwendung;component/Fonts/#Grandstander"
                           FontSize="28"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Foreground="Black"/>
                <Border Grid.Row="0" Grid.Column="1"
                        Width="34" Height="34"
                        CornerRadius="17"
                        Background="#C58AD1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                    <Image Source="/Images/AccessibilityIcon.png" Stretch="Fill"/>
                </Border>

                <ListBox x:Name="Box1" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                         Background="#DDA9E6"
                         BorderThickness="0"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         Margin="0,4,0,0" SelectionChanged="ListBox_SelectionChanged">
                    <ListBoxItem Content="Placeholder" Background="#CE8FD9" Margin="0,2,0,0"/>
                    <ListBoxItem Content="Placeholder" Background="#CE8FD9" Margin="0,2,0,0"/>
                    <ListBoxItem Content="Placeholder" Background="#CE8FD9" Margin="0,2,0,0"/>
                    <ListBoxItem Content="Placeholder" Background="#CE8FD9" Margin="0,2,0,4"/>
                </ListBox>
            </Grid>
        </Border>

        <!-- Theme Auswahl Box -->
        <Border x:Name="Border2" Grid.Row="1" Grid.Column="3"
                Background="#E9C0F0"
                CornerRadius="4"
                Padding="8"
                Margin="0,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="42"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="Theme" Grid.Row="0" Grid.Column="0"
                           Text="Theme Auswahl"
                           FontFamily="/WPF_Quiz_Anwendung;component/Fonts/#Grandstander"
                           FontSize="28"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Foreground="Black"/>

                <ListBox x:Name="Box2" Grid.Row="1" Grid.Column="0"
                         Background="#DDA9E6"
                         BorderThickness="0"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         Margin="0,4,0,0">
                    <ListBoxItem Content="Placeholder" Background="#CE8FD9" Margin="0,2,0,0"/>
                    <ListBoxItem Content="Placeholder" Background="#CE8FD9" Margin="0,2,0,0"/>
                    <ListBoxItem Content="Placeholder" Background="#CE8FD9" Margin="0,2,0,0" />
                    <ListBoxItem Content="Placeholder" Background="#CE8FD9" Margin="0,2,0,4"/>
                </ListBox>
            </Grid>
        </Border>

        <!-- Standardfragen bearbeiten -->
        <Border x:Name="Border3" Grid.Row="2" Grid.Column="1"
                Background="#E9C0F0"
                CornerRadius="4"
                Padding="8"
                Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="Standardfragen" Grid.Column="0"
                           Text="Standardfragen bearbeiten"
                           TextWrapping="Wrap"
                           FontFamily="/WPF_Quiz_Anwendung;component/Fonts/#Grandstander"
                           FontSize="22"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Foreground="Black"
                           Margin="0,2,8,2"/>
                
                <Button Grid.Column="1"
                        Content="Durchsuchen"
                        Style="{StaticResource RoundedButtonStyle}"
                        Margin="0"
                        Padding="4,2"
                        FontSize="12"
                        Background="#C58AD1"
                        Foreground="Black"
                        BorderBrush="Transparent" Click="Button_Click"/>
            </Grid>
        </Border>

        <!-- Dark mode -->
        <Border x:Name="Border4" Grid.Row="2" Grid.Column="3"
                Background="#E9C0F0"
                CornerRadius="4"
                Padding="8"
                Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
            
                <TextBlock x:Name="DarkMode" Grid.Column="0"
                           Text="Dark mode"
                           FontFamily="/WPF_Quiz_Anwendung;component/Fonts/#Grandstander"
                           FontSize="28"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Foreground="Black"
                           Margin="0,2,8,2"/>

                <CheckBox Grid.Column="1"
                          x:Name="DarkModeToggle"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Left"
                          Width="60" Height="28"
                          Margin="0"
                          ToolTip="Dark Mode umschalten"
                          Checked="DarkModeToggle_Checked"
                          Unchecked="DarkModeToggle_Unchecked">
                    <CheckBox.Template>
                        <ControlTemplate TargetType="CheckBox">
                            <Grid>
                                <Border x:Name="SwitchBackground"
                                        CornerRadius="14"
                                        Background="#D28CD9"/>
                                <Ellipse x:Name="Knob"
                                         Width="24" Height="24"
                                         Fill="#8A4B97"
                                         Margin="2"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="SwitchBackground" Property="Background" Value="#8A4B97"/>
                                    <Setter TargetName="Knob" Property="Fill" Value="#D28CD9"/>
                                    <Setter TargetName="Knob" Property="HorizontalAlignment" Value="Right"/>
                                    <Setter TargetName="Knob" Property="Margin" Value="2"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </CheckBox.Template>
                </CheckBox>
            </Grid>
        </Border>

    </Grid>
</Page>
