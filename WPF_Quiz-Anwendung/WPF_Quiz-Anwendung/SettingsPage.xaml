<Page x:Class="WPF_Quiz_Anwendung.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SettingsPage"
      Background="{DynamicResource AppBackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="325"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="325"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="173"/>
            <RowDefinition Height="Auto" MinHeight="184.84"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Überschrift" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="Einstellungen"
                   FontFamily="/WPF_Quiz_Anwendung;component/Fonts/#Grandstander"
                   FontSize="36"
                   FontWeight="Bold"
                   Margin="20,0,0,0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left" Height="44" Width="228"/>

        <!-- Accessibility Box -->
        <Border x:Name="Border1" Grid.Row="1" Grid.Column="1" CornerRadius="12"
                Background="{DynamicResource PanelBackgroundBrush}" Padding="8" Grid.RowSpan="2" Margin="0,129,0,44">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="42"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="42"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="Accessibility" Grid.Row="0" Grid.Column="0"
                           Text="Comming Soon"
                           FontFamily="/WPF_Quiz_Anwendung;component/Fonts/#Grandstander"
                           FontSize="28"
                           FontWeight="Bold"/>

                <Border Grid.Row="0" Grid.Column="1"
                        Width="34" Height="34"
                        CornerRadius="17"
                        Background="{DynamicResource AccentBrush}">
                    <Image Source="/Images/AccessibilityIcon.png" Stretch="Fill"/>
                </Border>

                <ListBox x:Name="Box1" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                         BorderThickness="0"
                         Margin="0,4,0,0">
                    <ListBoxItem Content="Placeholder" Background="{DynamicResource AccentBrushLight}" Margin="0,2,0,0"/>
                    <ListBoxItem Content="Placeholder" Background="{DynamicResource AccentBrushLight}" Margin="0,2,0,0"/>
                    <ListBoxItem Content="Placeholder" Background="{DynamicResource AccentBrushLight}" Margin="0,2,0,0"/>
                    <ListBoxItem Content="Placeholder" Background="{DynamicResource AccentBrushLight}" Margin="0,2,0,4"/>
                </ListBox>
            </Grid>
        </Border>

        <Border x:Name="Border3" Grid.Row="1" Grid.Column="1" CornerRadius="12"
                Background="{DynamicResource PanelBackgroundBrush}" Padding="8" Margin="0,0,0,87">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="Standardfragen" TextWrapping="Wrap" Grid.Column="0"
                           Text="Standardfragen bearbeiten"
                           FontFamily="/WPF_Quiz_Anwendung;component/Fonts/#Grandstander"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,2,8,2"/>
                <Button Grid.Column="1" Content="Durchsuchen"
                        Style="{StaticResource RoundedButtonStyle}"
                        Margin="0"
                        Padding="4,2"
                        FontSize="12"
                        BorderBrush="Transparent"
                        Click="Button_Click"/>
            </Grid>
        </Border>

        <!-- Dark mode -->
        <Border x:Name="Border4" Grid.Row="1" Grid.Column="3" CornerRadius="12"
                Background="{DynamicResource PanelBackgroundBrush}" Padding="8" Margin="0,0,0,125">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="DarkMode" Grid.Column="0"
                           Text="Dark mode"
                           FontFamily="/WPF_Quiz_Anwendung;component/Fonts/#Grandstander"
                           FontSize="28"
                           FontWeight="Bold"
                           Margin="0,2,8,2"/>

                <CheckBox x:Name="DarkModeToggle"
                          VerticalAlignment="Top"
                          Width="60" Height="28"
                          Checked="DarkModeToggle_Checked"
                          Unchecked="DarkModeToggle_Unchecked" Margin="188,2,59,0" Grid.ColumnSpan="2">
                    <CheckBox.Template>
                        <ControlTemplate TargetType="CheckBox">
                            <Grid>
                                <Border x:Name="SwitchBackground"
                                        CornerRadius="14"
                                        Background="{DynamicResource AccentBrushLight}"/>
                                <Ellipse x:Name="Knob"
                                         Width="24" Height="24"
                                         Fill="{DynamicResource AccentBrush}"
                                         Margin="2"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="SwitchBackground" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                    <Setter TargetName="Knob" Property="Fill" Value="{DynamicResource AccentBrushLight}"/>
                                    <Setter TargetName="Knob" Property="HorizontalAlignment" Value="Right"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </CheckBox.Template>
                </CheckBox>
            </Grid>
        </Border>
    </Grid>
</Page>
