<Page x:Class="WPF_Quiz_Anwendung.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource AppBackgroundBrush}">
    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Grid Width="800" Height="450" ShowGridLines="False" x:Name="ContentGrid"
              Background="{DynamicResource AppBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image Source="/Images/QuizzzardLogo.png"
                   Grid.Column="0" Grid.ColumnSpan="3"/>

            <Image Source="/Images/Group 5.png"
                   Grid.Column="2" Grid.ColumnSpan="2"/>

            <Button x:Name="Standard_Quiz" Grid.Column="0" Grid.Row="1"
                    Margin="30 80 30 80"
                    Background="{DynamicResource AccentBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    Content="Standart Quiz"
                    FontFamily="Grandstander"
                    Click="OpenDefaultQuiz"
                    Style="{StaticResource RoundedButtonStyle}"/>

            <Button x:Name="Load_Quiz" Grid.Column="1" Grid.Row="1"
                    Margin="30 80 30 80"
                    Background="{DynamicResource AccentBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    Content="Quiz Laden"
                    FontFamily="Grandstander"
                    Click="LoadQuiz"
                    Style="{StaticResource RoundedButtonStyle}"/>

            <Button x:Name="Create_Quiz" Grid.Column="2" Grid.Row="1"
                    Margin="30 80 30 80"
                    Background="{DynamicResource AccentBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    Content="Quiz erstellen"
                    FontFamily="Grandstander"
                    Click="Navigate_CreateQuizPage"
                    Style="{StaticResource RoundedButtonStyle}"/>

            <Button x:Name="Settings" Grid.Column="3" Grid.Row="1"
                    Margin="30 80 30 80"
                    Background="{DynamicResource AccentBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    Content="Einstellungen"
                    FontFamily="Grandstander"
                    Click="Navigate_SettingsPage"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </Grid>
    </Viewbox>
</Page>