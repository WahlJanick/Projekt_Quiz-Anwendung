<Page x:Class="WPF_Quiz_Anwendung.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Quiz_Anwendung"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage"
      Background="#F3C8FF">
    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Grid Width="800" Height="450" ShowGridLines="False" Background="#F3C8FF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Source="/Images/QuizzzardLogo.png" Grid.Column="0" Grid.ColumnSpan="3"></Image>
            <Image Source="/Images/Group 5.png" Grid.Column="2" Grid.ColumnSpan="2"></Image>
            <Button x:Name="Standard_Quiz" Grid.Column="0" Grid.Row="1" Margin="30 80 30 80" Background="#C772DF" BorderBrush="Purple" Content="Standart Quiz" FontSize="17" FontWeight="Bold" FontFamily="Grandstander" Click="OpenDefaultQuiz" ></Button>
            <Button x:Name="Load_Quiz" Grid.Column="1" Grid.Row="1" Margin="30 80 30 80" Background="#C772DF" BorderBrush="Purple" Content="Quiz Laden" FontSize="17" FontWeight="Bold" FontFamily="Grandstander" Click="LoadQuiz" ></Button>
            <Button x:Name="Create_Quiz" Grid.Column="2" Grid.Row="1" Margin="30 80 30 80" Background="#C772DF" BorderBrush="Purple" Content="Quiz erstellen" FontSize="17" FontWeight="Bold" FontFamily="Grandstander" Click="Navigate_CreateQuizPage" ></Button>
            <Button x:Name="Settings" Grid.Column="3" Grid.Row="1" Margin="30 80 30 80" Background="#C772DF" BorderBrush="Purple" Content="Einstellungen" FontSize="17" FontWeight="Bold" FontFamily="Grandstander" Click="Navigate_SettingsPage" ></Button>
        </Grid>
    </Viewbox>
</Page>
