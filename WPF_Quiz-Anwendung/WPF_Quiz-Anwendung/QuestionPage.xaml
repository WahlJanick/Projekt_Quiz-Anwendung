<Page x:Class="WPF_Quiz_Anwendung.QuestionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Quiz_Anwendung"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuestionPage"
      Background="#F3C8FF">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="275"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="1" Margin="20"
                Style="{StaticResource RoundedContainerStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBlock Name="QuestionTitleTB" Grid.Row="0" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Name="HelpTitleTB" Grid.Row="1" FontSize="16" Foreground="Black" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <Image Source="/Images/Group 5.png" Grid.Column="0" Margin="131,136,557,87" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Image.RenderTransform>
                <ScaleTransform ScaleX="-1"/>
            </Image.RenderTransform>
        </Image>

        <UniformGrid Name="AnswerGrid" Grid.Row="1" Grid.Column="1" Columns="2" Rows="2" Margin="10">
            
            <Border Margin="15" Style="{StaticResource RoundedContainerStyle}">
                <Button Click="AnswerClick" Style="{StaticResource RoundedButtonStyle}" Background="Transparent" BorderThickness="0" Content="Antwort A"/>
            </Border>

            <Border Margin="15" Style="{StaticResource RoundedContainerStyle}">
                <Button Click="AnswerClick" Style="{StaticResource RoundedButtonStyle}" Background="Transparent" BorderThickness="0" Content="Antwort B"/>
            </Border>

            <Border Margin="15" Style="{StaticResource RoundedContainerStyle}">
                <Button Click="AnswerClick" Style="{StaticResource RoundedButtonStyle}" Background="Transparent" BorderThickness="0" Content="Antwort C"/>
            </Border>

            <Border Margin="15" Style="{StaticResource RoundedContainerStyle}">
                <Button Click="AnswerClick" Style="{StaticResource RoundedButtonStyle}" Background="Transparent" BorderThickness="0" Content="Antwort D"/>
            </Border>
        </UniformGrid>
    </Grid>
</Page>
