<Page x:Class="WPF_Quiz_Anwendung.QuestionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Quiz_Anwendung"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuestionPage"
      Background="#F3C8FF">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="275"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="1" Margin="20"
                Style="{StaticResource RoundedContainerStyle}">
            <TextBlock Name="QuestionTitleTB" Text="" />
        </Border>

        <Rectangle Fill="#FFF3D7FF" Margin="14,165,571,30" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="51.167"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>

        <Image Source="/Images/Group 5.png" Grid.Column="0" Margin="131,136,557,87" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Image.RenderTransform>
                <ScaleTransform ScaleX="-1"/>
            </Image.RenderTransform>
        </Image>

        <UniformGrid Name="AnswerGrid" Grid.Row="1" Grid.Column="1" Columns="2" Rows="2" Margin="10">
            
            <Border Margin="15" Style="{StaticResource RoundedContainerStyle}">
                <Button Style="{StaticResource RoundedButtonStyle}" Background="Transparent" BorderThickness="0" Content="Antwort A"/>
            </Border>

            <Border Margin="15" Style="{StaticResource RoundedContainerStyle}">
                <Button Style="{StaticResource RoundedButtonStyle}" Background="Transparent" BorderThickness="0" Content="Antwort B"/>
            </Border>

            <Border Margin="15" Style="{StaticResource RoundedContainerStyle}">
                <Button Style="{StaticResource RoundedButtonStyle}" Background="Transparent" BorderThickness="0" Content="Antwort C"/>
            </Border>

            <Border Margin="15" Style="{StaticResource RoundedContainerStyle}">
                <Button Style="{StaticResource RoundedButtonStyle}" Background="Transparent" BorderThickness="0" Content="Antwort D"/>
            </Border>
        </UniformGrid>
    </Grid>
</Page>
