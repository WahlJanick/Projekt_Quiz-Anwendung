<Page x:Class="WPF_Quiz_Anwendung.QuestionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="QuestionPage"
      Background="{DynamicResource AppBackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="275"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Fragekarte: nutzt PanelBackgroundBrush (heller) -->
        <Border Grid.Row="0" Grid.Column="1" Margin="20"
                Style="{StaticResource RoundedContainerStyle}">
            <TextBlock Text=""
                       Margin="12"/>
        </Border>

        <Image Source="/Images/Group 5.png" Grid.Column="0" Margin="131,136,557,87" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Image.RenderTransform>
                <ScaleTransform ScaleX="-1"/>
            </Image.RenderTransform>
        </Image>

        <!-- Antwortkarten: ebenfalls PanelBackgroundBrush (heller) -->
        <UniformGrid Grid.Row="1" Grid.Column="1" Columns="2" Rows="2" Margin="10">
            <Border Margin="15" Style="{StaticResource RoundedContainerStyle}">
                <Button Style="{StaticResource RoundedButtonStyle}"
                        Background="Transparent" BorderThickness="0" Content="Antwort A"/>
            </Border>

            <Border Margin="15" Style="{StaticResource RoundedContainerStyle}">
                <Button Style="{StaticResource RoundedButtonStyle}"
                        Background="Transparent" BorderThickness="0" Content="Antwort B" Click="Button_Click"/>
            </Border>

            <Border Margin="15" Style="{StaticResource RoundedContainerStyle}">
                <Button Style="{StaticResource RoundedButtonStyle}"
                        Background="Transparent" BorderThickness="0" Content="Antwort C"/>
            </Border>

            <Border Margin="15" Style="{StaticResource RoundedContainerStyle}">
                <Button Style="{StaticResource RoundedButtonStyle}"
                        Background="Transparent" BorderThickness="0" Content="Antwort D"/>
            </Border>
        </UniformGrid>
    </Grid>
</Page>
